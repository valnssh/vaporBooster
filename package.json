{
	"name": "vaporbooster",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"generate": "pnpm dlx @better-auth/cli generate --output ./src/lib/schema.ts --config ./src/lib/auth.ts",
		"migrate": "pnpm exec drizzle-kit push",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "deno run -A --env-file=.env ./.deno-deploy/server.ts",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	},
	"devDependencies": {
		"@deno/svelte-adapter": "^0.1.0",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/qrcode": "^1.5.6",
		"drizzle-kit": "^0.31.8",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.5",
		"typescript": "^5.9.3",
		"vite": "^7.3.0",
		"vite-plugin-devtools-json": "^1.0.0"
	},
	"dependencies": {
		"@libsql/client": "^0.15.15",
		"@tailwindcss/vite": "^4.1.18",
		"better-auth": "^1.4.7",
		"drizzle-orm": "^0.45.1",
		"jwt-decode": "^4.0.0",
		"qrcode": "^1.5.4",
		"steam-session": "^1.9.4",
		"steam-totp": "^2.1.2",
		"steam-user": "^5.3.0",
		"tailwindcss": "^4.1.18"
	}
}
